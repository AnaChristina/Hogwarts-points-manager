{
  "compilerOptions": {
    "target": "ES2020",                      // Versão do JS que vai ser gerada
    "module": "CommonJS",                    // Sistema de módulos (Node usa CommonJS)
    "rootDir": "./src",                      // Pasta raiz do código fonte TS
    "outDir": "./dist",                      // Pasta onde o JS compilado vai para
    "strict": true,                         // Ativa checagem estrita de tipos
    "esModuleInterop": true,                // Para facilitar importações de módulos comuns
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                   // Ignora checagem de tipos em libs externas
    "resolveJsonModule": true,              // Permite importar arquivos JSON
    "noImplicitAny": true                   // Evita 'any' implícito
  },
  "include": ["src/**/*"],                  // Só inclui arquivos dentro de src
}